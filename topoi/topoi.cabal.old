cabal-version: 2.4

name:       topoi
version:    0.1.0.0
license:    BSD-3-Clause
category:   Language
build-type: Simple
copyright:  2020 Zheng Yan PEH

executable topoi
    hs-source-dirs:   app
    main-is:          CLI/Main.hs
    default-language: Haskell2010
    default-extensions:
        OverloadedStrings
    ghc-options:
        -threaded -rtsopts -with-rtsopts=-N
    build-depends:
        base,
        text-short,
        topoi

source-repository head
    type: git
    location: https://github.com/topoi-lang/topoi

library
    hs-source-dirs: src
    default-language: Haskell2010
    default-extensions:
        OverloadedStrings
    ghc-options:
        -O
        -Wall
        -Wcompat
        -Widentities
        -Wincomplete-record-updates
        -Wincomplete-uni-patterns
        -Wpartial-fields
        -Wredundant-constraints
        -flate-specialise
        -fspecialise-aggressively
    exposed-modules:
        Topoi.EvalNbE
    build-depends:
        base,
        polysemy,
        text-short,
        unordered-containers,
